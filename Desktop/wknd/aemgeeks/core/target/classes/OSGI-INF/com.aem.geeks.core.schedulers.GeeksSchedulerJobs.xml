<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.3.0" name="com.aem.geeks.core.schedulers.GeeksSchedulerJobs" immediate="true" activate="activate" deactivate="deactivate">
  <property name="schedulerName" type="String" value="Custom Sling Scheduler Configuration"/>
  <property name="cronExpression" type="String" value="0/20 * * * * ?"/>
